<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/details_image"
        android:layout_width="@dimen/pizza_size"
        android:layout_height="@dimen/pizza_size" />

    <ImageView
        android:id="@+id/details_add"
        android:layout_width="@dimen/pizza_add_remove_size"
        android:layout_height="@dimen/pizza_add_remove_size"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toRightOf="@id/details_image" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/details_ingredients_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/details_image" />

</android.support.constraint.ConstraintLayout>